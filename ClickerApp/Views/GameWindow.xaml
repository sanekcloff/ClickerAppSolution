<Window x:Class="ClickerApp.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickerApp.Views"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="300" ResizeMode="NoResize">
    
    <Grid>

        <StackPanel Orientation="Vertical">

            <TextBlock Text="LEVEL 0"/>

        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <TextBlock Text="LEVEL 0" HorizontalAlignment="Center"/>
            
            <Image Source="{Binding Enemy.Image}" Width="200" Height="200"/>

            <Button Content="Attack" Margin="20" Height="40"/>

        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Orientation="Horizontal">

            <Button Content="ClickDmg"/>
            <Button Content="TickDmg"/>

        </StackPanel>

    </Grid>
    
</Window>
